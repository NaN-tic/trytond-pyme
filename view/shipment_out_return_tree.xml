<data>
    <xpath expr="/tree" position="replace_attributes">
        <tree string="Sales" 
            colors="If(Equal(Eval('state'), 'draft'), 'blue',
                If(Equal(Eval('state'), 'received'), 'darkgreen',
                If(Equal(Eval('state'), 'cancel'), 'grey', 'black')))"/>
    </xpath>
</data>
