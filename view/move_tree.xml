<data>
    <xpath expr="/tree" position="replace_attributes">
        <tree string="Account Moves" 
            colors="If(Equal(Eval('state'), 'draft'), 'blue', 'black')"/>
    </xpath>
    <xpath expr="/tree/field[@name='state']" position="after">
        <button name="post" string="Post" tree_invisible="1"/>
        <button name="draft" string="Draft" tree_invisible="1"/>
    </xpath>
</data>
