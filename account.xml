<tryton>
    <data>
        <record model="ir.ui.view" id="configuration_view_form">
            <field name="model">account.configuration</field>
            <field name="type">form</field>
            <field name="inherit" ref="account.configuration_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form/field[@name='default_account_payable']" position="after">
                    <label name="default_customer_tax"/>
                    <field name="default_customer_tax"/>
                    <label name="default_supplier_tax"/>
                    <field name="default_supplier_tax"/>
                </xpath>
                </data>
                ]]>
            </field>
        </record>

        <!-- account.move -->
        <record model="ir.ui.view" id="move_view_tree">
            <field name="model">account.move</field>
            <field name="inherit"
                ref="account.move_view_tree"/>
            <field name="name">move_tree</field>
        </record>
    </data>
</tryton>
